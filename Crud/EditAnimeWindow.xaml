<Window x:Class="WPF_.Net.Crud.EditAnimeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Anime" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Nom:" Margin="5"/>
            <TextBox Name="NomTextBox" Width="250" Margin="5"/>
            <TextBlock Text="Acronyme:" Margin="5"/>
            <TextBox Name="AcronymeTextBox" Width="250" Margin="5"/>
            <Button Content="Save" Click="Save_Button" Width="250" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>