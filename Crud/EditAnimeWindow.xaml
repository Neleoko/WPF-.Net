<Window x:Class="WPF_.Net.Crud.EditAnimeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Anime" Height="200" Width="300" Background="#0d1b2a">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Nom:" Margin="5" Foreground="White" />
            <TextBox Name="NomTextBox" Width="250" Margin="5" />
            <TextBlock Text="Acronyme:" Margin="5" Foreground="White" />
            <TextBox Name="AcronymeTextBox" Width="250" Margin="5" />
            <Button Content="Save" Click="Save_Button" Width="250" Margin="5" Style="{StaticResource RoundedButtonStyle}" />
        </StackPanel>
    </Grid>
</Window>